name:DeploySyntharaAItoCloudRun
on:
  push:
    branches:[main]
  pull_request:
    branches:[main]
  workflow_dispatch:
jobs:
  build-and-deploy:
    runs-on:ubuntu-latest
    steps:
      - name:Checkoutrepositorycode
        uses:actions/checkout@v3
      - name:AuthenticatetoGoogleCloud
        id:auth
        uses:google-github-actions/auth@v2
        with:
          credentials_json:${{secrets.GCPSAKEY}}
      - name:SetUpCloudSDK
        uses:google-github-actions/setup-gcloud@v2
      - name:DeploytoCloudRun
        uses:google-github-actions/deploy-cloudrun@v2
        with:
          project_id:banded-advice-453200-m1
          service:Synthara-ai
          region:us-central1
          source:.
